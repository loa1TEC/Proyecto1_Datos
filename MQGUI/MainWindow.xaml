<Window x:Class="MQGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Message Queue System" Height="350" Width="500">
    <Grid>
        <TextBlock Text="Tema:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,20,0,0"/>
        <TextBox x:Name="txtTopic" Width="200" Height="25" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="70,20,0,0"/>
        <TextBlock Text="Mensaje:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="12,56,0,0"/>
        <TextBox x:Name="txtMessage" Width="200" Height="25" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="70,51,0,0"/>

        <Button Content="Suscribirse" Width="100" Height="25" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="300,20,0,0" Click="Subscribe_Click"/>
        <Button Content="Enviar Mensaje" Width="120" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="180,90,0,0" Click="SendMessage_Click"/>
        <Button Content="Recibir Mensaje" Width="120" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="321,90,0,0" Click="ReceiveMessage_Click"/>
        <Button x:Name="Btndes" Content="Desuscribirse" HorizontalAlignment="Left" Margin="300,51,0,0" VerticalAlignment="Top" Width="100" Height="25" Visibility="Hidden"/>

        <TextBlock Text="Mensajes Recibidos:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,120,0,0"/>
        <ListBox x:Name="lstMessages" Width="440" Height="150" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,150,0,0"/>
    </Grid>
</Window>
